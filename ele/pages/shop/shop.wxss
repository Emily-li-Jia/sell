/* pages/shop/shop.wxss */
page{
  background-color: #F8F8F8;
}
.category{
  background-color: white;
  width:100%;
  height: 160rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
   flex-wrap: wrap;
}

text{
  color: #666;
}
.item-image{
  width:148rpx;
  height: 101rpx;
  margin-bottom: 12rpx;
}
.item-text{
  color: #666;
  font-size: 13px;
}
.category-item{

  display:flex;
  flex-direction: column;
  align-items: center;
}
.shop-item-out{
  background-color: white;
  /* height: 157rpx; */
  width: 100%;
  padding-top: 8rpx;
}
.shop-item{
  display: flex;
  flex-direction: row;
  height: 150rpx;
  width: 90%;
  margin: 0 auto;
}
.shop-item-image{
  height: 140rpx;
  width: 217rpx;
}
.shop-item-content{
  width: 100%;
  margin-left: 20rpx;
  display: felx;
  flex-direction: column;
}
.shop-item-content-in{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.head{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background-color: #FED06A;
}
.location{
  /* width: 300rpx; */
  height: 60rpx;
  display: flex;
  position: relative;
  top:24rpx;
  left: 24rpx;
  flex-direction: row;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius:60px;
  max-width: 400rpx;
}
.search{
  height: 60rpx;
  position: relative;
  top:24rpx;
  right: 10rpx;
  display: flex;
  flex-direction: row;
  background-color: white;
  border-radius:8px;
  width: 300rpx;
}

.head_1{
  display: flex;
  flex-direction: row;
  height: 69rpx;
  background-color: white;
  line-height: 69rpx;
  border-bottom: 1rpx solid #F5F5F5;
}
.sort{
  font-size: 29rpx;
  color: #7C7C7C;
  margin-left:35rpx;
  font-weight: 400;
}
.sortSelect{
  font-size: 30rpx;
  color: #333333;
  margin-left:39rpx;
  font-weight: 600;
}
.noShop_out{
  background-color: #F5F5F5;
  height: 1011rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.noShop_change{
  height: 70rpx;
  width: 220rpx;
  background-color: #FED06A;
  color: white;
  border-radius: 75rpx;
  text-align: center;
  line-height: 70rpx;
  margin-top: 50rpx;
}